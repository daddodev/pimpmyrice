Name:           %{name}
Version:        %{version}
Release:        %{release}%{?dist}
Summary:        A brief description of the package

License:        %{license}
URL:            https://github.com/%{author_name}/%{name}
Source0:        %{name}-%{version}.tar.gz

BuildArch:      noarch

BuildRequires:  python3-devel, python3-build, python3-hatchling

AutoReq: no

Requires: python3-rich
Requires: python3-docopt
Requires: python3-pyyaml
Requires: python3-jinja2
Requires: python3-requests
Requires: python3-psutil
Requires: python3-numpy
Requires: python3-pillow
Requires: python3-pydantic
Requires: python3-typing-extensions

%description
A longer description of the package.

%prep
%autosetup

%build
python3 -m build --no-isolation -w

%install
%{__mkdir_p} %{buildroot}%{python3_sitelib}
python3 -m pip install --no-index --no-build-isolation --root=%{buildroot} --prefix=/usr --no-deps --ignore-installed dist/%{name}-%{version}-*.whl


%files
%doc README.md LICENSE
%{_bindir}/pimp
%{python3_sitelib}/%{name}/
